<div class="row">
  <div class="columns large-12">
    <%= link_to plans_path do %>
      <%= icon "chevron-left", class: "icon--small", role: "img" %>
      <%= t("decidim.plans.plans.edit.back") %>
    <% end %>
  </div>
</div>

<div class="idea-form-container">
  <div class="row">
    <div class="columns large-8">
      <div class="idea-form-text">
        <h2 class="section-heading"><%= t(".title") %></h2>
      </div>
    </div>
  </div>

  <%= decidim_form_for(@form, html: { class: "plans-form" }) do |form| %>
    <div class="row">
      <div class="columns large-12">
        <%= render partial: "form", object: form %>

        <div class="actions text-center">
          <% if @plan && @plan.persisted? && @plan.draft? %>
            <%= link_to t("decidim.plans.plans.edit.discard"), destroy_draft_plan_path(@plan), class: "mr-2 discard-draft-link", method: :delete, data: { confirm: t("decidim.plans.plans.edit.discard_confirmation") } %>
          <% end %>
          <% if @plan && (!@plan.persisted? || @plan.draft?) %>
            <%= form.submit t("decidim.plans.plans.edit.save"), name: "save", class: "button hollow primary large mr-2", data: { disable: true } %>
          <% end %>
          <div class="actions">
            <%= form.submit t("decidim.plans.plans.edit.update"), class: "button expanded mt-s mb-none", data: { disable: true } %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<%= javascript_include_tag "decidim/plans/plans_form" %>
<%= stylesheet_link_tag "decidim/plans/plans_form" %>
