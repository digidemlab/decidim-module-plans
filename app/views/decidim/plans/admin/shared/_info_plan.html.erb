<div class="card">
  <div class="card-divider">
    <h2 class="card-title">
      <%= link_to "#{t ".plans"} > ", plans_path %>
      <%= present(plan).title %>
    </h2>
  </div>

  <div class="card-section">
    <div class="row column">
      <strong><%= t ".body" %>: </strong>  <%= present(plan).body %>
    </div>
    <div class="row column">
      <strong><%= t ".created_at" %>: </strong> <%= l plan.created_at, format: :decidim_short %>
    </div>
  </div>
</div>
